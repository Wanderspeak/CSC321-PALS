<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="/assets/kickstart.js"></script> <!-- KICKSTART -->
<link rel="stylesheet" href="/assets/kickstart.css" media="all" /> <!-- KICKSTART -->
<script src="/assets/jquery.maskedinput.js" type="text/javascript"></script>
<script>
  jQuery(function($){
     $("#phone").mask("(999) 999-9999");
  });
</script>

<div class="grid flex">
<div style="text-align:center">
<h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="col_6 column" style="text-align:right; font-size:18px">
  <div class="field">
    <label for="firstname">First name:</label>
    <%= f.text_field :firstname %>
  </div><br/>
  
  <div class="field">
    <label for="lastname">Last name:</label>
    <%= f.text_field :lastname %>
  </div><br/>
  
  <div class="field">
    <label for="phone">Phone:</label>
    <%= f.text_field :phone, :id => "phone", placeholder: "(___) ___-____", size: "12" %>
  </div>
  <input type="checkbox" id="textable" checked="true"/>
  <label for="textable" class="inline">This phone is capable<br/>of receiving texts.</label><br/><br/>

  <div class="field">
    <label for="email">Email:</label>
    <%= f.email_field :email, placeholder: "(this will be your username)", size: "25" %>
  </div><br/>

  <div class="field">
    <label for="password">Password:</label>
    <%= f.password_field :password, autocomplete: "off", placeholder: "(6 characters minimum)" %>
  </div><br/>

  <div class="field">
    <label for="password_confirmation">Confirm password:</label>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  </div>
  
  <!--
  <label><b>Interests</b></label>
  <label>
    <%#= f.check_box :interests %> Dogs
  </label>
  <label>
    <%#= f.check_box :interests %> Cats
  </label>
  -->
  <div class="col_6 column" style="text-align:center; font-size:20px">
  <fieldset>
    <legend>Interests</legend>
    <table>
      <tr>
        <div style="text-align:left">
        <td>
        	<input type="checkbox" id="dogs" />
          <label for="dogs" class="inline">Dogs</label><br/>
        </td>
        <td>
          <input type="checkbox" id="dogwalker" />
          <label for="dogwalker" class="inline">Dog-walking</label><br/>
          
          <input type="checkbox" id="dogfeeder" />
          <label for="dogfeeder" class="inline">Dog feeding</label><br/>
          
          <input type="checkbox" id="dogplayer" />
          <label for="dogplayer" class="inline">Dog playing</label><br/>
          
          <input type="checkbox" id="doggroomer" />
          <label for="doggroomer" class="inline">Dog grooming</label><br/>
        </td>
        <td rowspan="2">
          <input type="checkbox" id="baker" />
          <label for="baker" class="inline">Cooking/baking</label><br/>
          
          <input type="checkbox" id="organizer" />
          <label for="organizer" class="inline">Organizing events</label><br/>
          
          <input type="checkbox" id="fundraiser" />
          <label for="fundraiser" class="inline">Fundraising</label><br/>
          
          <input type="checkbox" id="other"/>
          <label for="other" class="inline">Other</label><br/>
          <input id="other" type="text" disabled="disabled" size="10" style="height:25px"/>
        </td>
        </div>
      </tr>
      <tr>
        <td>
          <input type="checkbox" id="cats" />
          <label for="cats" class="inline">Cats</label><br/>
        </td>
        <td>
          <input type="checkbox" id="catfeeder" />
          <label for="catfeeder" class="inline">Cat feeding</label><br/>
          
          <input type="checkbox" id="catplayer" />
          <label for="catplayer" class="inline">Cat playing</label><br/>
        </td>
      </tr>
    </table>
  </fieldset>
  
  <br/>

  <div class="field" style="text-align:left; font-size:18px">
    <label for="birthdate">Date of birth:</label>
    <%= date_select :user, :born_on, :start_year => 1900, :end_year => 2017, :use_month_numbers => true, :order => [:month, :day, :year] %>
  </div>
  </div>
  </div>

  <br/>
  
<div class="col_12 column" style="text-align:center; font-size:18px">
  <div class="actions">
    <%= f.submit "Volunteer" %>
  </div>
  
<% end %>

<br/>
<%= render "devise/shared/links" %>
</div>