<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <link rel="stylesheet" href="/assets/kickstart.css" media="all" /> <!-- KICKSTART -->
  <%= stylesheet_link_tag "users" %>
</head>

<body style="background-image:url('/assets/dogcats.png')">
  <div class="container" style="background-color:white">
    <div class="row">
      <div class="col-md-6">
        <h2 style="text-align:center">Your Profile</h2>
    
            <ul class="alt">
              <li>
                <b>Name:</b>&emsp;<%= @user.name %>
              </li><li>
                <b>Birthdate:</b>&emsp;<%= @user.dob %>
              </li><li>
                <b>Phone:</b>&emsp;<%= @user.phone %>
              </li><li>
                <b>Email:</b>&emsp;<%= @user.email %>
              </li><li>
                <b>Interests:</b>&emsp;<%= @user.interests %>
              </li>
            </ul>
        
        <div style="display:inline-block">
          <%= link_to 'Edit', edit_user_registration_path(@user) %>
        </div>
        <div style="display:inline-block">
          <%= link_to 'Back to post list', posts_path %>
        </div>
        <div style="display:inline-block">
          <%= button_to 'Delete', @user, :method => :delete, data: {:confirm => 'Are you sure?'} %>
        </div>
        <br/>
        <br/>
      </div>
    </div>
  </div>
</body>